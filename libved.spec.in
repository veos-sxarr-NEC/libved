Name:		@PACKAGE@
Version:	@VERSION@
Release:	@RELEASE@%{?dist}
Summary:	Library for VE Driver
Group:		System Environment/Libraries
License:	LGPL
Source0:	@PACKAGE@-@VERSION@.tar.gz
Vendor:		NEC Corporation
Packager:	NEC Corporation
BuildArch:	x86_64
BuildRequires:	ve_drv-kmod-devel >= 0.4.1
BuildRequires:	vp-kmod-devel >= 0.4.1
BuildRequires:	systemd-devel >= 219
BuildRequires:	glibc-headers >= 2.17
Requires:	systemd-libs >= 219
Requires:	glibc >= 2.17

%description
libved is a library for VE Driver.

%package        devel
Summary:        Headers for building apps that use libved library
Group:          System Environment/Libraries
Requires:       %{name} = %{version}-%{release}

%description    devel
This package contains header required to build applications that
use libved library

%define _prefix @prefix@

%prep
%setup -q

%build
%configure --with-no-memcpy=@NO_MEMCPY@
make %{?_smp_mflags}

%install
%{__rm} -rf $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT

%clean
%{__rm} -rf $RPM_BUILD_ROOT

%post
/sbin/ldconfig
%postun
/sbin/ldconfig

%files
%defattr(-,root,root,-)
%doc
%{_libdir}/*.so.*

%files devel
%defattr(-,root,root,-)
%doc
%{_includedir}/*.h
%{_libdir}/*.a
%{_libdir}/*.la
%{_libdir}/*.so
#%{_libdir}/pkgconfig/%{name}.pc
#%{_datadir}/aclocal/*.m4

%changelog
